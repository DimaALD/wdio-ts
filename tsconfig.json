{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "expect-webdriverio",
      "@wdio/cucumber-framework"
    ],
    "target": "ES2022",
    "baseUrl": "src",
    "paths": {
      "@config/*": ["./configs/*"],
      "@po/*": ["./page-objects/*"],
      "@support/*": ["./support/*"],
      "@steps/*": ["./steps/*"],
      "@helpers/*": ["./helpers/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
